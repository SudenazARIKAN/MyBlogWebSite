@using travelproject.Models.Classes
@model List<MyBlog>

@{
    ViewData["Title"] = "MyBlog";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            font-family: Arial, sans-serif;
            background: #f9f9f9;
            margin: 0;
            padding: 0;
        }

        /* Sol içerik */
        .single-grid img {
            width: 90%;       /* resimleri biraz küçülttük */
            border-radius: 6px;
            margin-bottom: 15px;
        }

        .single-grid p {
            line-height: 1.4; /* biraz sıkıştırdık */
            color: #444;
            font-size: 0.95rem; /* metin boyutu küçüldü */
        }

        /* Sağ sidebar */
        .side-content {
            text-align: right; /* sağa hizaladık */
        }

        .side-content h3 {
            border-bottom: 1px solid #ddd;
            padding-bottom: 5px;
            margin-bottom: 10px;
            font-size: 1.1rem; /* başlık boyutu küçüldü */
        }

        .side-content ul {
            list-style: none;
            padding: 0;
        }

        .side-content ul li {
            margin-bottom: 6px;
            font-size: 0.9rem; /* liste fontunu küçülttük */
        }

        .side-content ul li a {
            color: #333;
            text-decoration: none;
        }

        .side-content ul li a:hover {
            color: #ff9900;
        }
    </style>
</head>
<body>

<div class="container my-5">
    <div class="row">
        <!-- Sol içerik -->
        <div class="col-lg-8">
            @foreach (var x in Model)
            {
                <div class="single-grid mb-4">
                    <img src="@x.BlogImage" alt="@x.Title">
                    <p><a href="/MyBlog/MyBlogDetail/@x.ID">@x.Title</a></p>""
                    <p>@x.Explanation</p>
                </div>
            }
        </div>

        <!-- Sağ sidebar -->
        <div class="col-lg-4 mt-4 mt-lg-0 side-content">
            <div class="recent mb-4">
                <h3>LAST BLOGS</h3>
                <ul>
                    <li><a href="#">Aliquam tincidunt mauris</a></li>
                    <li><a href="#">Vestibulum auctor dapibus lipsum</a></li>
                    <li><a href="#">Nunc dignissim risus consecu</a></li>
                    <li><a href="#">Cras ornare tristiqu</a></li>
                </ul>
            </div>

            <div class="comments mb-4">
                <h3>LAST COMMENTS</h3>
                <ul>
                    <li><a href="#">Amada Doe</a> on <a href="#">Hello World!</a></li>
                    <li><a href="#">Peter Doe</a> on <a href="#">Photography</a></li>
                    <li><a href="#">Steve Roberts</a> on <a href="#">HTML5/CSS3</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
