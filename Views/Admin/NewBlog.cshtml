@using travelproject.Models.Classes

@model travelproject.Models.Classes.MyBlog
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "New Blog";
}
<br>
<h2>Add New Blog</h2>
<br>
<form class="form-group" method="post">
    @Html.LabelFor(x=>x.Title)
    @Html.TextBoxFor(x=>x.Title,new {@class="form-control"})
    <br>
     @Html.LabelFor(x=>x.Date)
     @Html.TextBoxFor(x=>x.Date,new {@class="form-control"})
         <br>
     @Html.LabelFor(x=>x.BlogImage)
     @Html.TextBoxFor(x=>x.BlogImage,new {@class="form-control"})
         <br>
     @Html.LabelFor(x=>x.Explanation)
     @Html.TextAreaFor(x=>x.Explanation,new {@class="form-control"})
<br>
<button type="submit" class="btn btn-primary">Add Blog</button>
</form>