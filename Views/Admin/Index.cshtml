@using travelproject.Models.Classes

@model travelproject.Models.MyIndexViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Admin Panel";
}
<br>
<h2>Blog List</h2>
<br>
<table class= "table table-bordered">
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Delete</th>
        <th>Update</th>
        <th>Details</th>
    </tr>
    @foreach(var x in Model.AllBlogs)
    {      
    <tr>
        <td>@x.ID</td>
        <td>@x.Title</td>
        <td><a href="/Admin/DeleteBlog/@x.ID" class="btn btn-danger">Delete</a></td>
        <td><a href="/Admin/GetBlog/" class="btn btn-warning">Update</a></td>
        <td><a href="#" class="btn btn-success">Details</a></td>
        
    </tr>
    }
</table>
<a href="/Admin/NewBlog/" class="btn btn-primary">New Blog</a>
