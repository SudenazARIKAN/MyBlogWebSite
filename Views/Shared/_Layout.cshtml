<!DOCTYPE html>
<html lang="tr">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>@ViewData["Title"] - TravelProject</title>
  
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />


   <style>
   
      .custom-navbar {
        background-color: #751344 !important;
        font-weight: 700;
    }
    .custom-navbar .navbar-brand {
        color: white;
        font-weight: 700;
    }
    .custom-navbar {
  min-height: 120px; 
  padding-top: 1rem;
  padding-bottom: 1rem;
}
.bg-light.border-bottom .nav {
     background-color: rgb(75, 16, 20) !important;
min-height: 60px; 
  padding-top: 1.5rem;    
  padding-bottom: 1.5rem; 
  font-weight: 600;       
  
}
.bg-light.border-bottom .nav-link {
  color: #faf6f6 !important;  
   }
   .bg-light.border-bottom .container-fluid {
  padding-left: 0 !important;
  padding-right: 0 !important;
}

  </style>
</head>


<body>
 
   <!-- Ana Navbar -->
<nav class="navbar custom-navbar">
    <div class="container">
        <a class="navbar-brand" href="/">TravelProject</a>
    </div>
</nav>
<!-- Menü Satırı -->
<div class="bg-light border-bottom">
    <div class="container-fluid">
        <ul class="nav justify-content-center py-2 position-relative">
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Home" asp-action="About">About</a>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle text-dark" href="#" id="guideDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Guide
                </a>
                <ul class="dropdown-menu" aria-labelledby="guideDropdown">
                    <li><a class="dropdown-item" asp-controller="Home" asp-action="Hotels">Hotels</a></li>
                    <li><a class="dropdown-item" asp-controller="Home" asp-action="Restaurants">Restaurants</a></li>
                    <li><a class="dropdown-item" asp-controller="Home" asp-action="Museums">Museums</a></li>
                </ul>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Home" asp-action="MyBlog">My Blog</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Home" asp-action="Contact">Contact</a>
            </li>
        </ul>
    </div>
</div>



  <main class="container mt-4">
    @RenderBody()
  </main>

  <footer class="bg-light text-center py-4 mt-5 border-top">
    <p class="mb-0">© 2025 TravelProject. Tüm hakları saklıdır.</p>
  </footer>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  @RenderSection("Scripts", required: false)
</body>
</html>

